#!/bin/bash
# Postinstall script

echo "Setting up NAPS2 service..."

# Ensure LaunchAgents directory exists
mkdir -p ~/Library/LaunchAgents

# Copy plist file
cp /usr/local/bin/com.naps2.service.plist ~/Library/LaunchAgents/com.naps2.service.plist

# Load the service
launchctl load ~/Library/LaunchAgents/com.naps2.service.plist

echo "NAPS2 service installed and running in background âœ…"
exit 0
